<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/wrongChoice1"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="137dp"
        android:layout_marginStart="15dp"
        android:background="#f6c880"
        android:text="Michael Myers"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/correctChoice"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="205dp"
        android:layout_marginStart="15dp"
        android:background="#f6c880"
        android:text="Jason Voorhees"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cyan"
        android:text="Who do you watch out for on Friday the 13th?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/flashcard_question"
        android:background="@color/yellow"
        android:textColor="@color/darkYellow"
        android:text="Jason Voorhees"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/wrongChoice2"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:layout_marginStart="15dp"
        android:background="#f6c880"
        android:text="Freddy Krueger"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/visibility"
        android:layout_width="70dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher_invisible_foreground" />

</RelativeLayout>